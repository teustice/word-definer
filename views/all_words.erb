<h1>Here are your words:</h1>

<% Word.all.each do |word|%>
  <div class="row">
    <div class="all-display col-md-1">
      <h3><%= word.word %></h3>
    </div>
    <div class="all-display col-md-5">
      <ol>
        <% word.definitions.each do |definition|%>
        <li>
          <%= definition.definition %>
        </li>
        <% end %>
      </ol>
    </div>
  </div>
  <hr>
<% end %>
